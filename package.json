{
  "name": "ai-grammar",
  "displayName": "AI Grammar Checker",
  "description": "Completely free and open source Chrome AI Grammar Check Extension",
  "version": "0.3.1",
  "author": "Igor Adrov",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "ai",
    "grammar"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "build": "tsc && vite build",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'",
    "zip": "npm run build && node src/zip.js",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.10",
    "@types/diff": "^5.2.1",
    "@types/dom-chromium-ai": "^0.0.0",
    "diff": "^5.2.0",
    "ollama": "^0.5.9"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@types/chrome": "^0.0.246",
    "@vitejs/plugin-react": "^4.1.0",
    "gulp": "^5.0.0",
    "gulp-zip": "^6.0.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  }
}
